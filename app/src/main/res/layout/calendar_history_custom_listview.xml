<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/calendar_history_one_task"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/calendar_history_status"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/calendar_history_task_name"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="programming"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/calendar_history_status"
            />
        <TextView
            android:id="@+id/calendar_history_total_time"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:text="total: 20:30:10"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/calendar_history_task_name"
            />
        <TextView
            android:id="@+id/calendar_history_completed_time"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:text="finished: 20:30:10"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_below="@id/calendar_history_total_time"
            android:layout_alignEnd="@id/calendar_history_total_time"
            android:layout_alignRight="@id/calendar_history_task_name" />

        <TextView
            android:id="@+id/calendar_history_point_description"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:text="Points:"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/calendar_history_total_time"
            />

        <TextView
            android:id="@+id/calendar_history_point"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:text="1111"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_below="@id/calendar_history_point_description"
            android:layout_alignEnd="@id/calendar_history_point_description"
            android:layout_alignRight="@id/calendar_history_completed_time" />
    </RelativeLayout>



</LinearLayout>